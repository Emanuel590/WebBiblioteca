@page
@model WebBiblioteca.Pages.LoginModel1
@using Microsoft.AspNetCore.Http

@inject IHttpContextAccessor HttpContextAccessor

@{
    ViewData["Title"] = "Iniciar Sesión";
}

<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css">

<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css">

<style>
    .gradient-custom {
        background: #f3e8ff; 
    }

    .card {
        background-color: #ffffff !important; 
        color: #000000; 
    }

    .form-label,
    .form-control {
        color: #000 !important;
    }

    .text-muted,
    .text-white-50,
    .text-secondary {
        color: #333 !important;
    }

    a {
        color: #4b0082; 
    }

        a:hover {
            color: #6a0dad;
            text-decoration: underline;
        }

    .btn-orange {
        background-color: #fcbf49;
        color: #000;
        border: none;
    }

        .btn-orange:hover {
            background-color: #f9a825;
            color: #000;
        }

    .titulo-morado {
        color: #6a0dad;
    }
</style>

<section class="vh-100 gradient-custom">
    <div class="container py-5 h-100">
        <div class="row d-flex justify-content-center align-items-center h-100">
            <div class="col-12 col-md-8 col-lg-6 col-xl-5">
                <div class="card" style="border-radius: 1rem;">
                    <div class="card-body p-5 text-center">

                        <div class="mb-md-5 mt-md-4 pb-5">
                            <h2 class="fw-bold mb-2 text-uppercase titulo-morado">Iniciar Sesión</h2>
                            <p class="mb-4 text-muted">Por favor ingresa tu correo y contraseña</p>

                            @if (!string.IsNullOrEmpty(Model.MensajeError))
                            {
                                <div class="alert alert-danger">@Model.MensajeError</div>
                            }

                            <form method="post" id="loginForm">

                                <div class="form-outline mb-4 text-start">
                                    <label class="form-label" for="typeEmailX">Email</label>
                                    <input type="email" asp-for="Input.Email" id="typeEmailX" class="form-control form-control-lg" required />
                                    <span asp-validation-for="Input.Email" class="text-danger"></span>
                                </div>

                                <div class="form-outline mb-4 text-start">
                                    <label class="form-label" for="typePasswordX">Contraseña</label>
                                    <input type="password" asp-for="Input.Contra" id="typePasswordX" class="form-control form-control-lg" required />
                                    <span asp-validation-for="Input.Contra" class="text-danger"></span>
                                </div>

                                <p class="small mb-4 pb-lg-2">
                                    <a href="#">¿Olvidaste tu contraseña?</a>
                                </p>

                                <button class="btn btn-orange btn-lg px-5 w-100" type="submit">Ingresar</button>

                            </form>

                            <div class="d-flex justify-content-center text-center  pt-1">
                                
                            </div>
                        </div>

                        <div>
                            <p class="mb-0">¿No tienes cuenta? <a href="/Register" class="fw-bold">Regístrate aquí</a></p>
                        </div>

                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

<script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>

<script>
    document.getElementById('loginForm').addEventListener('submit', function (e) {
        e.preventDefault(); 

        fetch(window.location.pathname, {
            method: 'POST',
            body: new FormData(document.querySelector('form')), 
        })
        .then(response => response.json())
        .then(data => {
            if (data.success && data.token) {
                console.log(" Token recibido desde el backend:", data.token);
                localStorage.setItem('AuthToken', data.token);
                sessionStorage.setItem('AuthToken', data.token);
                sessionStorage.setItem('EmailUsuario', data.email);
                console.log(" Token guardado en localStorage y sessionStorage");
                window.location.href = '/Index'; 
            } else {
                console.log(" Error al iniciar sesión");
            }
        })
        .catch(error => console.error("Error:", error));
    });
</script>
