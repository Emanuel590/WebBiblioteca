@page
@model WebBiblioteca.Pages.CreateEmpleadoModel
@{
	ViewData["Title"] = "Registro de Empleados";
}

<h2>Registro Empleado</h2>

@if (!string.IsNullOrEmpty(Model.MensajeError))
{
	<div class="alert alert-danger">@Model.MensajeError</div>
}

<form method="post">
    <div class="mb-3">
        <label>Nombre</label>
        <input type="text" asp-for="Empleado.nombre" class="form-control" required />
    </div>
    <div class="mb-3">
        <label>Email</label>
        <input type="email" asp-for="Empleado.email" class="form-control" required />
    </div>
    <div class="mb-3">
        <label>Código Postal</label>
        <input type="number" asp-for="Empleado.codigo_postal" class="form-control" required />
    </div>
    <div class="mb-3">
        <label>Teléfono</label>
        <input type="number" asp-for="Empleado.telefono" class="form-control" required />
    </div>
    <div class="mb-3">
        <label>Cédula</label>
        <input type="number" asp-for="Empleado.cedula" class="form-control" required />
    </div>
    <div class="mb-3">
        <label>Contraseña</label>
        <input type="password" asp-for="Empleado.contra" class="form-control" required />
    </div>
    <button type="submit" class="btn btn-primary">Registrarse</button>
</form>


