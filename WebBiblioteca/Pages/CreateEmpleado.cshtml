@page
@model WebBiblioteca.Pages.CreateEmpleadoModel
@{
    ViewData["Title"] = "Registro de Empleados";
}

<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css">

<style>
    .gradient-custom {
        background: #f3e8ff;
    }

    .card {
        background-color: #ffffff !important;
        color: #000000;
    }

    .form-label,
    .form-control {
        color: #000 !important;
    }

    .text-muted,
    .text-white-50,
    .text-secondary {
        color: #333 !important;
    }

    a {
        color: #fcbf49; 
        text-decoration: none; 
    
        }

    .btn-primary {
        background-color: #007bff;
        color: #fff;
        border: none;
    }

        .btn-primary:hover {
            background-color: #0056b3;
            color: #fff;
        }

    .btn-orange {
        background-color: #fcbf49;
        color: #000;
        border: none;
    }

        .btn-orange:hover {
            background-color: #f9a825;
            color: #000;
        }

    .titulo-morado {
        color: #6a0dad;
    }
</style>

<section class="min-vh-90 gradient-custom py-5">
    <div class="container mb-5">
        <div class="row d-flex justify-content-center align-items-center h-100">
            <div class="col-12 col-md-8 col-lg-6 col-xl-5">
                <div class="card" style="border-radius: 1rem;">
                    <div class="card-body p-5 text-center">
                        <a href="/PerfilUsuario" class="btn btn-orange btn-lg px-5 w-90">Volver al Perfil</a>

                        <div class="mb-md-5 mt-md-4 ">

                            <h2 class="fw-bold mb-2 text-uppercase titulo-morado">Registro Empleado</h2>
                            <p class="mb-4 text-muted">Crea un nuevo empleado llenando el siguiente formulario</p>

                            @if (!string.IsNullOrEmpty(Model.MensajeError))
                            {
                                <div class="alert alert-danger">@Model.MensajeError</div>
                            }

                            <form method="post" class="mb-5">
                                <div class="form-outline mb-4 text-start">
                                    <label class="form-label">Nombre</label>
                                    <input type="text" asp-for="Empleado.nombre" class="form-control form-control-lg" required />
                                </div>
                                <div class="form-outline mb-4 text-start">
                                    <label class="form-label">Email</label>
                                    <input type="email" asp-for="Empleado.email" class="form-control form-control-lg" required />
                                </div>
                                <div class="form-outline mb-4 text-start">
                                    <label class="form-label">Código Postal</label>
                                    <input type="number" asp-for="Empleado.codigo_postal" class="form-control form-control-lg" required />
                                </div>
                                <div class="form-outline mb-4 text-start">
                                    <label class="form-label">Teléfono</label>
                                    <input type="number" asp-for="Empleado.telefono" class="form-control form-control-lg" required />
                                </div>
                                <div class="form-outline mb-4 text-start">
                                    <label class="form-label">Cédula</label>
                                    <input type="number" asp-for="Empleado.cedula" class="form-control form-control-lg" required />
                                </div>
                                <div class="form-outline mb-4 text-start">
                                    <label class="form-label">Contraseña</label>
                                    <input type="password" asp-for="Empleado.contra" class="form-control form-control-lg" required />
                                </div>

                                <button type="submit" class="btn btn-orange btn-lg px-5 w-100">Registrarse</button>

                            </form>

                        </div>

                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
