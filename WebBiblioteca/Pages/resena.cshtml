@page
@model WebBiblioteca.Pages.resenaModel
@{
    ViewData["Title"] = "Reseñas";
}

<div class="container my-5">
    <div class="card">
        <h1 class="card-header text-center text-white" style="background-color: #F2A172">Registro de Reseñas</h1>
        <div class="card-body">
            <table class="table" id="tablaResenas">
                <thead>
                    <tr class="text-center">
                        <th scope="col">#</th>
                        <th scope="col">Reseña</th>
                        <th scope="col">Libro</th>
                        <th scope="col">Usuario</th>
                        <th scope="col">Estado</th>
                        <th scope="col">Acciones</th>
                        <th scope="col">Acciones Admin</th>
                    </tr>
                </thead>
                <tbody class="text-center">
                    <tr></tr>
                </tbody>
            </table>
        </div>
    </div>
</div>

<div class="text-center">
    <a type="button" class="btn rounded-0" style="background-color: #F25835; border: none;" data-bs-toggle="modal" data-bs-target="#exampleModal">
        <h6 class="text-white fw-bold"><i class="fa-solid fa-comment-dots px-1"></i>Agregar Reseña</h6>
    </a>
</div>

<div class="modal fade" id="exampleModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <div class="text-center">
                    <h1 class="modal-title fs-5" id="exampleModalLabel">Agregar Reseña</h1>
                </div>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <form method="POST" id="ResenasAgregar">
                    <div class="mb-3">
                        <label for="resena" class="form-label">Reseña</label>
                        <textarea class="form-control" id="resena" placeholder="Ingrese la reseña"></textarea>
                    </div>
                    <div class="mb-3">
                        <label for="librosOption" class="form-label">Libro</label>
                        <select class="form-select" id="librosOption" aria-label="Default select example"></select>
                    </div>
                    <div class="mb-3">
                        <label for="usuariosOption" class="form-label">Usuario</label>
                        <select class="form-select" id="usuariosOption" aria-label="Default select example"></select>
                    </div>
                    <div class="text-center">
                        <button type="submit" class="btn border-0" style="background-color: #F25835;">
                            <h5 class="text-white fw-bold"><i class="fa-solid fa-square-check px-2"></i>Agregar</h5>
                        </button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

<div class="modal fade" id="exampleModal3" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <div class="text-center">
                    <h1 class="modal-title fs-5" id="exampleModalLabel">Actualizar Reseña</h1>
                </div>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <form method="POST" id="ResenasActualizar">
                    <input type="hidden" class="form-control" id="idEdit">
                    <div class="mb-3">
                        <label for="resenaEdit" class="form-label">Reseña</label>
                        <textarea class="form-control" id="resenaEdit" placeholder="Ingrese la reseña"></textarea>
                    </div>
                    <div class="mb-3">
                        <label for="librosOptionEdit" class="form-label">Libro</label>
                        <select class="form-select" id="librosOptionEdit" aria-label="Default select example"></select>
                    </div>
                    <div class="mb-3">
                        <label for="usuariosOptionEdit" class="form-label">Usuario</label>
                        <select class="form-select" id="usuariosOptionEdit" aria-label="Default select example"></select>
                    </div>
                    <input type="hidden" class="form-control" id="estadoEdit">
                    <div class="text-center">
                        <button type="submit" class="btn border-0" style="background-color: #F25835;">
                            <h5 class="text-white fw-bold"><i class="fa-solid fa-square-check px-2"></i>Actualizar</h5>
                        </button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

<script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
<script src="~/js/ResenasAdmin.js"></script>
