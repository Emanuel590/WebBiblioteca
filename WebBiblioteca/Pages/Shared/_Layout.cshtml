@using WebBiblioteca.Models
@using Microsoft.AspNetCore.Http
@inject IHttpContextAccessor HttpContextAccessor

@{
    var authToken = Context.Session.GetString("AuthToken");
    int userRole;

    if (authToken != null)
    {
        userRole = Context.Session.GetInt32("UserRole") ?? 0;
    }
    else
    {
        userRole = 0;
    }
}




<!DOCTYPE html>
<html lang="en">

<head>

    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - WebBiblioteca</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/WebBiblioteca.styles.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/nav.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
    <link rel="stylesheet" href="https://cdn.datatables.net/1.13.4/css/dataTables.bootstrap5.min.css" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css" integrity="sha512-..." crossorigin="anonymous" referrerpolicy="no-referrer" />


</head>
<body>
    <header>
        <nav class="navbar navbar-expand-lg navbar-dark" style="background-color: #795D8C;">
            <div class="container-fluid d-flex justify-content-between">
                <a class="navbar-brand fs-1 mx-2" href="/Index">Biblioteca</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent"
                aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse" id="navbarSupportedContent">
                    <ul class="navbar-nav me-auto mb-2 mb-lg-0 mx-4">
                        @{
                            if (userRole == 1 || userRole == 3)
                            {
                                <li class="nav-item nav-items px-3">
                                    <a class="nav-link active fs-5" href="/LibrosAdmin">
                                        <i class="fa-solid fa-book me-1"></i> Libros
                                    </a>
                                </li>
                            }
                            else
                            {
                                <li class="nav-item nav-items px-3">
                                    <a class="nav-link active fs-5" href="/Libros">
                                        <i class="fa-solid fa-book me-1"></i> Libros
                                    </a>
                                </li>
                            }
                        }

                        <li class="nav-item dropdown px-3">
                            @{
                                if (userRole == 1 || userRole == 3)
                                {
                                    <a class="nav-link active nav-items fs-5" href="/GenerosAdmin">
                                        <i class="fa-solid fa-masks-theater me-1"></i> Géneros
                                    </a>
                                }
                                else
                                {
                                    <a class="nav-link active nav-items fs-5" href="#">
                                        <i class="fa-solid fa-masks-theater me-1"></i> Géneros
                                    </a>
                                }
                            }
                            <ul class="dropdown-menu" id="ulGeneros"></ul>
                        </li>

                        @{
                            if (userRole == 1 || userRole == 3)
                            {
                                <li class="nav-item px-3">
                                    <a class="nav-link active nav-items fs-5" href="/AutoresAdmin">
                                        <i class="fa-solid fa-pen-nib me-1"></i> Autores
                                    </a>
                                </li>
                                <li class="nav-item px-3">
                                    <a class="nav-link active nav-items fs-5" href="/CategoriaAdmin">
                                        <i class="fa-solid fa-folder me-1"></i> Categoría
                                    </a>
                                </li>
                                <li class="nav-item px-3">
                                    <a class="nav-link active nav-items fs-5" href="/ReclamosAdmin">
                                        <i class="fa-solid fa-triangle-exclamation me-1"></i> Reclamos
                                    </a>
                                </li>
                                <li class="nav-item px-3">
                                    <a class="nav-link active nav-items fs-5" href="/resena">
                                        <i class="fa-solid fa-comment-dots me-1"></i> Reseñas
                                    </a>
                                </li>
                                <li class="nav-item px-3">
                                    <a class="nav-link active nav-items fs-5" href="/ReservasAdmin">
                                        <i class="fa-solid fa-calendar-check me-1"></i> Reservas
                                    </a>
                                </li>
                            }
                        }

                        <li class="nav-item px-3">
                            <a class="nav-link active nav-items fs-5" href="/ProductosMostrar">
                                <i class="fa-solid fa-box me-1"></i> Productos
                            </a>
                        </li>

                        @{
                            if (userRole == 1 || userRole == 3)
                            {
                                <li class="nav-item px-3">
                                    <a class="nav-link active nav-items fs-5" href="/CategoriaAdmin">
                                        <i class="fa-solid fa-folder me-1"></i> Categorías
                                    </a>
                                </li>
                            }
                        }
                    </ul>


                    <div>


                        @if (authToken != null)
                        {
                            <div class="d-flex align-items-center">
                                <a href="/PerfilUsuario" class="text-decoration-none text-white fs-5 px-3 nav-items d-flex align-items-center">
                                    <i class="fa-solid fa-user me-1"></i> Perfil
                                </a>

                                <form method="post" asp-page="/Logout" asp-page-handler="OnPost" class="m-0">
                                    <button type="submit" class="btn btn-link text-white fs-5 text-decoration-none nav-items d-flex align-items-center px-3">
                                        <i class="fa-solid fa-sign-out-alt me-1"></i> Logout
                                    </button>
                                </form>
                            </div>
                        }
                        else
                        {
                            <a href="/Login" class="text-white fs-5 px-3 text-decoration-none nav-items d-flex align-items-center">
                                <i class="fa-solid fa-sign-in-alt me-1"></i> Login
                            </a>
                        }




                    </div>

                </div>

            </div>

        </nav>
    </header>

    <div class=" my-5">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2025 - WebBiblioteca - <a asp-area="" asp-page="/Privacy">Privacy</a>
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="https://cdn.datatables.net/1.13.4/js/jquery.dataTables.min.js"></script>
    <script src="https://cdn.datatables.net/1.13.4/js/dataTables.bootstrap5.min.js"></script>
    <script src="~/js/Generos.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>



    @RenderSection("Scripts", required: false)
</body>
</html>