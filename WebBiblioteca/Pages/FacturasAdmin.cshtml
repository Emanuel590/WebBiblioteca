@page
@model WebBiblioteca.Pages.FacturasAdminModel
@{
    ViewData["Title"] = "Administrar Facturas";
}


<div class="container mt-4">
    <h2 class="text-center">@ViewData["Title"]</h2>

    <div class="row mb-4">
        <div class="col-12 text-end">
            <button class="btn btn-primary mb-3" data-bs-toggle="modal" data-bs-target="#addFacturaModal">
                <i class="fas fa-plus-circle me-1"></i> Agregar Factura
            </button>


        </div>
    </div>

    <div class="table-responsive">
        <table id="facturasTable" class="table table-striped table-bordered">
            <thead class="table-dark">
                <tr>
                    <th>ID</th>
                    <th>Fecha</th>
                    <th>Total</th>
                    <th>Usuario</th>
                    <th>Producto</th>
                    <th>Método de Pago</th>
                    <th>Estado</th>
                    <th>Reservas</th>
                    <th>Acciones</th>
                    
                </tr>
            </thead>
            <tbody>
            </tbody>
        </table>
    </div>
</div>

<div class="modal fade" id="addFacturaModal" tabindex="-1" aria-labelledby="addFacturaModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="addFacturaModalLabel">Agregar Factura</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <form id="addFacturaForm">
                    <div class="mb-3">
                        <label for="addFechaFactura" class="form-label">Fecha</label>
                        <input type="date" class="form-control" id="addFechaFactura" required>
                    </div>
                    <div class="mb-3">
                        <label for="addTotal" class="form-label">Total</label>
                        <input type="number" class="form-control" id="addTotal" required>
                    </div>
                    <div class="mb-3">
                        <label for="addUsuario" class="form-label">Usuario</label>
                        <select class="form-control" id="addUsuario" required></select>
                    </div>
                    <div class="mb-3">
                        <label for="addProducto" class="form-label">Producto</label>
                        <select class="form-control" id="addProducto" required></select>
                    </div>
                    <div class="mb-3">
                        <label for="addMetodoPago" class="form-label">Método de Pago</label>
                        <select class="form-control" id="addMetodoPago" required></select>
                    </div>
                    <div class="mb-3">
                        <label for="addEstado" class="form-label">Estado</label>
                        <select class="form-control" id="addEstado" required></select>
                    </div>
                    <div class="mb-3">
                        <label for="addReserva" class="form-label">Reserva</label>
                        <select class="form-control" id="addReserva" required></select>
                    </div>
                    <button type="submit" class="btn btn-primary">Agregar Factura</button>
                </form>
            </div>
        </div>
    </div>
</div>

<div class="modal fade" id="editFacturaModal" tabindex="-1" aria-labelledby="editFacturaModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="editFacturaModalLabel">Editar Factura</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <form id="editFacturaForm">
                    <input type="hidden" id="editIdFactura">
                    <div class="mb-3">
                        <label for="editFechaFactura" class="form-label">Fecha</label>
                        <input type="date" class="form-control" id="editFechaFactura" required>
                    </div>
                    <div class="mb-3">
                        <label for="editTotal" class="form-label">Total</label>
                        <input type="number" class="form-control" id="editTotal" required>
                    </div>
                    <div class="mb-3">
                        <label for="editUsuario" class="form-label">Usuario</label>
                        <select class="form-control" id="editUsuario" required></select>
                    </div>
                    <div class="mb-3">
                        <label for="editProducto" class="form-label">Producto</label>
                        <select class="form-control" id="editProducto" required></select>
                    </div>
                    <div class="mb-3">
                        <label for="editReserva" class="form-label">Reserva</label>
                        <select class="form-control" id="editReserva" required></select>
                    </div>
                    <div class="mb-3">
                        <label for="editMetodoPago" class="form-label">Método de Pago</label>
                        <select class="form-control" id="editMetodoPago" required></select>
                    </div>
                    <div class="mb-3">
                        <label for="editEstado" class="form-label">Estado</label>
                        <select class="form-control" id="editEstado" required></select>
                    </div>
                    <button type="submit" class="btn btn-primary">Actualizar Factura</button>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="https://cdn.datatables.net/1.11.5/js/jquery.dataTables.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/facturasAdmin.js"></script>
}
